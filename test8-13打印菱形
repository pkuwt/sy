#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
int main() {
	int a = 0;
	scanf("%d", &a);
	int i=0;

	for (i; i < a; i++) {
		for (int b = 0; b < a - i; b++) {
			printf(" ");
		}
		for (int b = 0; b < 2*i-1; b++) {
			printf("*");
		}
		printf("\n");
	}
	i = 0;
	for (i; i < a; i++) {
		for (int b = 0; b<i; b++) {
			printf(" ");
		}
		for (int b = 0; b <2*(a-i)-1; b++) {
			printf("*");
		}
		printf("\n");
	}
	
	return 0;
}
